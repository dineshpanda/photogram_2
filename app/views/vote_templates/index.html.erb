<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All votes
    </h1>

    
      <a href="/votes/new" class="btn btn-block btn-outline-secondary">
        Add a new vote
      </a>
    
  </div>
</div>

<!-- Ransack Code start -->

