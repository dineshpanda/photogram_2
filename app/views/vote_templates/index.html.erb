<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @votes.each do |vote| %>
      <tr>
        <!-- Display vote.id start -->
        <td>
          <%= vote.id %>
        </td>
        <!-- Display vote.id end -->

        <!-- Display vote.user_id start -->
        <td>
          <%= vote.user.email %>
        </td>
        <!-- Display vote.user_id end -->

        <!-- Display vote.photo_id start -->
        <td>
          <%= vote.photo.caption %>
        </td>
        <!-- Display vote.photo_id end -->

        <!-- Display vote.created_at start -->
        <td>
          <%= time_ago_in_words(vote.created_at) %> ago
        </td>
        <!-- Display vote.created_at end -->

        <!-- Display vote.updated_at start -->
        <td>
          <%= time_ago_in_words(vote.updated_at) %> ago
        </td>
        <!-- Display vote.updated_at end -->

        <td>
          <a href="/votes/<%= vote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
