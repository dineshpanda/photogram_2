<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Vote #<%= @vote.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/votes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @vote.user %>
          <a href="/votes/<%= @vote.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit vote
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @vote.user %>
          <a href="/delete_vote/<%= @vote.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete vote
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @vote.user.present? %>
          <a href="/users/<%= @vote.user_id %>">
            <%= @vote.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <% if @vote.photo.present? %>
          <a href="/photos/<%= @vote.photo_id %>">
            <%= @vote.photo.caption %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@vote.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@vote.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

