<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All users
    </h1>

    
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Username
        </th>

        <th>
          Avatar
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Bio
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <!-- Display user.id start -->
        <td>
          <%= user.id %>
        </td>
        <!-- Display user.id end -->

        <!-- Display user.username start -->
        <td>
          <%= user.username %>
        </td>
        <!-- Display user.username end -->

        <!-- Display user.avatar start -->
        <td>
          <%= user.avatar %>
        </td>
        <!-- Display user.avatar end -->

        <!-- Display user.first_name start -->
        <td>
          <%= user.first_name %>
        </td>
        <!-- Display user.first_name end -->

        <!-- Display user.last_name start -->
        <td>
          <%= user.last_name %>
        </td>
        <!-- Display user.last_name end -->

        <!-- Display user.bio start -->
        <td>
          <%= user.bio %>
        </td>
        <!-- Display user.bio end -->

        <!-- Display user.created_at start -->
        <td>
          <%= time_ago_in_words(user.created_at) %> ago
        </td>
        <!-- Display user.created_at end -->

        <!-- Display user.updated_at start -->
        <td>
          <%= time_ago_in_words(user.updated_at) %> ago
        </td>
        <!-- Display user.updated_at end -->

        <td>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
