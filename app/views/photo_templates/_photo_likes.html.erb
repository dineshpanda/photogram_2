<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#photo_likes_new_form">
      Add vote
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @photo.likes.each do |vote| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/votes/<%= vote.id %>">
          <%= vote.user_id %>
        </a>

        <%if current_user == vote.user %>
          <a href="/delete_vote_from_photo/<%= vote.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="photo_likes_new_form">
        <%= render partial: "photo_templates/photo_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
